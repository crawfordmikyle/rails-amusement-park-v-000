<%= form_for(@attraction) do |f| %>

  <div class="from-group">
    <%= f.label :name, class: "control-label" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="from-group">
    <%= f.label :min_height, "Height Requirement (in inches)", class: "control-label" %><br>
    <%= f.number_field :min_height, class: "form-control" %>
  </div>

  <div class="from-group">
    <%= f.label :happiness_rating, "How fun is it? (1-5 scale)", class: "control-label" %><br>
    <%= f.number_field :happiness_rating, class: "form-control" %>
  </div>

  <div class="from-group">
    <%= f.label :nausea_rating, "How nausea-inducing is it? (1-5 scale)", class: "control-label" %><br>
    <%= f.number_field :nausea_rating, class: "form-control" %>
  </div>

  <div class="from-group">
    <%= f.label :tickets, "How many tickets does it cost?", class: "control-label" %><br>
    <%= f.number_field :tickets, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-default btn-primary" %>
  </div>
<% end %>
